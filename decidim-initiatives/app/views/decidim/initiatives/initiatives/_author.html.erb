<div class="author-data initiative-authors">
  <div class="author-data__main ">
    <div class="author author--inline">
      <span class="author__avatar author__avatar--small">
        <%= image_tag initiative.author_avatar_url, alt: t("avatar", scope: "activemodel.attributes.group") %>
      </span>
      <span class="author__name">
        <% if initiative.author.deleted? %>
          <span class="label label--small label--basic">
            <%= t(".deleted") %>
          </span>
        <% else %>
          <%= initiative.author_name %>
        <% end %>
      </span>
    </div>

    <% accepted_committee_members(initiative).each_with_index do |m, index| %>
      <% unless m.user.deleted? %>
        <div class="author author--inline <%= hide_committee_member?(index) ? "author--hidden hide" : "" %>">
          <span class="author__avatar author__avatar--small">
            <%= image_tag m.user.avatar_url %>
          </span>
          <span class="author__name">
            <%= decidim_sanitize(m.user.name) %>
          </span>
        </div>
      <% end %>
    <% end %>

    <% if extra_committee_members.positive? %>
      <div class="author author--inline author_see-options">
        <span class="author__see-more">
            <%= raw t(".more_authors", authors_count: extra_committee_members, see_more: content_tag(:button, class: "authors_see-more-link") { t ".see_more" }) %>
          </span>
        <button class="author__see-less-link hide">
          <%= t(".see_less") %>
        </button>
      </div>
    <% end %>

    <div class="publish-date">
      <%= l initiative.published_at || initiative.created_at, format: "%d/%m/%Y" %>
    </div>

    <div class="reference">
      <%== t(".identifier", identifier: initiative.id ) %>
    </div>
  </div>

  <%= javascript_include_tag "decidim/initiatives/collapse_authors_list" %>
</div>
