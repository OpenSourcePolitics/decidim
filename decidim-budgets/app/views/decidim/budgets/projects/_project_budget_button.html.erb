<div id="project-<%= project.id %>-budget-button">
  <% if current_order && current_order.projects.include?(project) %>
    <%= remove_project_authorized_button(project, "button expanded button--sc success budget--list__action", t(".added")) %>
  <% else %>
    <%= add_project_authorized_button(project, "button expanded button--sc budget--list__action", t(".add")) %>
  <% end %>
</div>
