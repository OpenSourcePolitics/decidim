<% if !@filter_origin %>
  <h2 id="proposals-count" class="section-heading">
    <%= t("citizens_proposals_count", count: @citizens_proposals.count, scope: "decidim.proposals.proposals.count" ) %>
  </h2>

  <div class="<%= "row small-up-1 medium-up-2 card-grid" unless @param_list %>">
    <%= render @citizens_proposals.first(10) %>
  </div>
  <div class="text-right">
    <%= link_to t(".see_all"), proposals_path("filter[origin]" => "citizens", display_type: @param_display_type) %>
  </div>
<% else %>
  <h2 id="proposals-count" class="section-heading">
    <%= t("citizens_proposals_count", count: @citizens_proposals.count, scope: "decidim.proposals.proposals.count" ) %>
  </h2>
  <div class="<%= "row small-up-1 medium-up-2 card-grid" unless @param_list %>">
    <%= render @citizens_proposals %>
  </div>
<% end %>
