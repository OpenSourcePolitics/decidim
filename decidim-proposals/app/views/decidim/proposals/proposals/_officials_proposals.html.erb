<h2 id="proposals-count" class="section-heading">
  <%= t("officials_proposals_count", count: @officials_proposals.count, scope: "decidim.proposals.proposals.count") %>
</h2>
<% if !@filter_origin %>
  <div class="<%= 'row small-up-1 medium-up-2 card-grid' unless @param_list %>">
    <%= render @officials_proposals.first(4) %>
  </div>
  <div class= "text-right">
    <%= link_to t(".see_all"), proposals_path('filter[origin]' => 'official', display_type: @param_display_type) %>
  </div>
<% else %>
  <div class="<%= 'row small-up-1 medium-up-2 card-grid' unless @param_list %>">
    <%= render @officials_proposals %>
  </div>
<% end %>
