<div class="reveal" data-reveal id="voting-rules-modal">
  <div class="reveal__header">
    <h3 class="reveal__title"><%= t(".title") %></h3>
    <button class="close-button" data-close aria-label="<%= t(".close") %>" type="button">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <p><%= t(".voting_rules_description").html_safe %></p>
  <ul>
    <li><%= t("decidim.components.budgets.settings.global.vote_per_project") %></li>
    <li><%= t("decidim.components.budgets.settings.global.vote_per_budget") %></li>
  </ul>
  <p><%= t(".projects_limit_description", total_projects: @component_projects_count).html_safe %></p>
  <ul>
    <li><%= t("decidim.components.budgets.settings.global.total_projects") %></li>
    <li><%= t("decidim.components.budgets.settings.global.vote_per_category") %></li>
  </ul>
  <div class="row">
    <div class="columns medium-8">
      <button data-close class="button expanded"><%= t(".ok") %></button>
    </div>
  </div>
</div>
