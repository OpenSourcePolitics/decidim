<% unless cookies_accepted? %>
  <div class="cookie-banner">
    <div class="cookie-banner__title">
      <h4>
        <%= t(".title") %>
      </h4>
    </div>

    <div class="cookie-banner__description">
      <p><%= t(".description_html", link: link_to(t(".link_label"), decidim.page_path("terms-and-conditions"), target: "_blank")) %></p>
    </div>
    <div class="cookie-banner__action">
      <%= button_to t(".ok"), decidim.accept_cookies_path, method: :get, remote: true, class: "button tiny cookie-banner__button" %>
      <button id="cookie-banner__more-informations" class="cookie-banner__more-informations"><%= t(".more_information") %></button>
    </div>
  </div>
<% end %>
