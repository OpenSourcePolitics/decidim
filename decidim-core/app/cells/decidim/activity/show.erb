<article class="card card--widget">
  <ul class="card-data">
    <li class="card-data__item">
      <div class="card__link text-center">
        <%= resource_icon resource, class: "icon--large", role: "img" %>
        <span class="text-medium mt-xs"><%= created_at %></span>
      </div>
    </li>
    <li class="card-data__item card-data__item--expand">
      <div>
        <%= author %>
        <% if title.present? %>
          <span class="text-small"><%= title %></span>
        <% end %>
        <%= link_to resource_link_path, class: "card__link" do %>
          <h2 class="card__title mb-none">
            <%= html_truncate resource_link_text, length: 100 %>
          </h2>
        <% end %>
        <%= description %>
      </div>
    </li>
  </ul>
</article>
