<% if translatable? %>
  <div class="card__translate">
    <%= link_to "#", class: "translatable_btn btn btn-secondary", data: {
      translatabletype: "proposal-card",
      targetlang: deepl_target_locale(current_locale, default_locale),
      translatable: true,
      translated: t("decidim.translated"),
      original: t("decidim.translate", target: deepl_current_locale_name(current_locale, default_locale))
    } do %>
      <div class="loading-spinner loading-spinner--hidden"></div>
      <%= with_tooltip(t("decidim.translate_tooltip")) do %>
        <%= t("decidim.translate", target: deepl_current_locale_name(current_locale, default_locale)) %>
      <% end %>
      <%= icon "star", class: "action-icon action-icon--disabled" %>
    <% end %>
  </div>
<% end %>
