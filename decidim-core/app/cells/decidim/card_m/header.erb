<div class="card__header">
  <% if has_link_to_resource? %>
    <%= link_to resource_path, class: "card__link" do %>
      <h5 class="card__title" <%= translate_title_helper_for(model) %>>
        <%= title %>
      </h5>
    <% end %>
  <% else %>
    <div class="card__link">
      <h5 class="card__title" <%= translate_title_helper_for(model) %>>
        <%= title %>
      </h5>
    </div>
  <% end %>

  <%= render_authorship if has_authors? %>

</div>
