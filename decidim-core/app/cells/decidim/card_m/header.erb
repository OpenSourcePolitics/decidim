<div class="card__header">
  <% if has_link_to_resource? %>
    <%= link_to resource_path, class: "card__link" do %>
      <h3 class="card__title" <%= "id=#{translate_helper_for(element: :title, model: model)}" %>>
        <%= title %>
      </h3>
    <% end %>
  <% else %>
    <div class="card__link">
      <h3 class="card__title" <%= "id=#{translate_helper_for(element: :title, model: model)}" %>>
        <%= title %>
      </h3>
    </div>
  <% end %>

  <%= render_authorship if has_authors? %>

</div>
